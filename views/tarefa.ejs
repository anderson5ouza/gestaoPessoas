<%- include('partials/header.ejs'); %>

<body>

<%- include('partials/navbar.ejs'); %>

    <div class="container pt-3">

        <div class="card" id="formulario-tarefa">

            <div class="card-header">
                <h3 class="mt-2 mb-2 text-center">Cadastrar Tarefa</h3>
            </div>
    
            <div class="card-body">

                <h4><%= pessoa.nome %></h4>
                <p><%= pessoa.funcao %></p>
    
                <form method="post" action="/salvar-tarefa">
                    <input type="hidden" name="pessoaId" value="<%= pessoa.id%>">
                    <label>Descrição da tarefa</label>
                    <textarea class="form-control mb-2" name="descricao" placeholder="Descreva a função da pessoa"></textarea>
                    <button class="btn btn-primary mt-2">Cadastrar</button>
                </form>

                <hr>
                <h3>Tarefas</h3>
                <hr>

                <% tarefas.forEach(tarefa => { %>
                    <div class="card mt-2">
                        <div class="card-body">
                            <p>
                                Tarefa ID: <%= tarefa.id %>
                                <br>
                                Descrição: <%= tarefa.descricao %>
                            </p>
                        </div>
                    </div>
                <% }) %>
            
            </div>
    
            <div class="card-footer text-center">
                <a role="button" class="btn btn-primary" href="/">Voltar</a>
            </div>

    </div>

</body>

<%- include('partials/footer.ejs'); %> 