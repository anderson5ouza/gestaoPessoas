<%- include('partials/header.ejs'); %>

<body>

<%- include('partials/navbar.ejs'); %>

<div class="container pt-3">

    <div class="card" id="formulario-pessoa">

        <div class="card-header">
            <h3 class="mt-2 mb-2 text-center">Cadastrar Pessoa</h3>
        </div>

        <div class="card-body">

            <form method="post" action="/salvar-pessoa">
                <label>Nome completo</label>
                <input type="text" class="form-control mb-2" name="nome" placeholder="Informe o nome completo">
                <label>Email</label>
                <input type="email" class="form-control mb-2" name="email" placeholder="Informe o email">
                <label>Descrição da função</label>
                <textarea class="form-control mb-2" name="funcao" placeholder="Descreva a função da pessoa"></textarea>
                <button class="btn btn-primary mt-2">Cadastrar</button>
            </form>
        
        </div>

        <div class="card-footer text-center">
            <a role="button" class="btn btn-primary" href="/">Voltar</a>
        </div>

    </div>

</div>

</body>

